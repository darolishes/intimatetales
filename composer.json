{
    "name": "daro/wpcore",
    "description": "Core WordPress stack via Composer",
    "authors": [
        {
            "name": "Dawid Rogaczewski",
            "homepage": "https://www.daro.de/"
        }
    ],
    "type": "project",
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "path",
            "url": "./src/plugins/intimate-tales-plugin",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "./src/themes/intimate-tales-theme",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "composer",
            "url": "https://connect.advancedcustomfields.com"
        }
    ],
    "config": {
        "sort-packages": true,
        "vendor-dir": "web/vendor",
        "allow-plugins": {
            "composer/installers": true,
            "johnpbloch/wordpress-core-installer": true
        }
    },
    "require": {
        "php": ">=8.2",
        "composer/installers": "^1.12",
        "johnpbloch/wordpress": ">=6.2",
        "rarst/fragment-cache": "^1.3",
        "wpengine/advanced-custom-fields-pro": "^6.2",
        "intimate-tales/intimate-tales-plugin": "dev-master",
        "intimate-tales/intimate-tales-theme": "dev-master",
        "log1x/navi": "^2.0",
        "roots/soil": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "wpackagist-plugin/a-fresher-cache": "*",
        "wpackagist-plugin/core-control": "*",
        "wpackagist-plugin/monster-widget": "*",
        "wpackagist-plugin/user-switching": "*"
    },
    "extra": {
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "web/app/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "web/app/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        },
        "wordpress-install-dir": "web/wp"
    },
    "scripts": {
        "test": "phpunit",
        "check-cs": "phpcs --standard=WordPress src/",
        "fix-cs": "phpcbf --standard=WordPress src/"
    }
}
