<!-- Dieses Template setzt voraus, dass die Benutzerregistrierung auf Ihrer WordPress-Website aktiviert ist. -->
<form method="post" action="{{ registration_url }}">
    <p>
        <label for="user_login">Username<br>
        <input type="text" name="user_login" id="user_login"></label>
    </p>
    <p>
        <label for="user_email">Email<br>
        <input type="email" name="user_email" id="user_email"></label>
    </p>
    <p class="submit">
        <input type="submit" name="wp-submit" id="wp-submit" class="button button-primary button-large" value="Register">
    </p>
</form>
