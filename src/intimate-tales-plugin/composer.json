{
  "name": "intimatetales/plugin",
  "type": "wordpress-plugin",
  "description": "Beschreibung f√ºr das Intimate Tales Plugin",
  "authors": [
      {
          "name": "Dawid Rogaczewski",
          "email": "d.rogaczewski@gmail.com"
      }
  ],
  "require": {
    "php": "^8.1",
    "roots/acorn": "^3.2",
    "roots/wp-config": "^1.0"
  },
  "require-dev": {
    "fzaninotto/faker": "^1.5",
    "laravel/pint": "^v1.10.5",
    "phpstan/phpstan": "^1.10",
    "spatie/laravel-ignition": "^1.6",
    "szepeviktor/phpstan-wordpress": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "IntimateTales\\App\\": "src/app",
      "IntimateTales\\Database\\Factories\\": "src/database/factories/",
      "IntimateTales\\Database\\Seeders\\": "src/database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "IntimateTales\\Tests\\": "src/tests/"
    }
  },
  "post-autoload-dump": [
    "Roots\\Acorn\\ComposerScripts::postAutoloadDump"
  ],
  "scripts": {
    "lint": "./vendor/bin/pint src",
    "prefix": "php -d memory_limit=-1 ./tools/php-scoper add-prefix",
    "test:lint": "./vendor/bin/pint src --test",
    "test:types": "APP_RUNNING_IN_CONSOLE=false ./vendor/bin/phpstan analyse --memory-limit 1G"
  },
  "minimum-stability": "dev",
  "config": {
    "prefer-stable": true,
    "sort-packages": true
  },
  "extra": {
      "installer-name": "intimate-tales"
  }
}
